extends layouts/main
include mixins/videoBlock

block content 
	.user-profile  
		img.u-avatar(src=user.avatarUrl)
		div
			h4.profile__username=user.name
		if loggedUser && user.id == loggedUser.id 
			a(href=`/users${ routes.editProfile }`)
				button Edit Profile
	.home-videos 
		each video in user.videos
			+videoBlock(video)